@using Common
<div class="navbar navbar-inverse">
    <div class="navbar-header">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <img src="~/Content/images/HeaderLogo.png" alt="" />

        </a>
        <ul class="nav navbar-nav pull-right visible-xs-block">
                <li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
                <li><a class="sidebar-mobile-main-toggle"><i class="icon-paragraph-justify3"></i></a></li>
            </ul>
    </div>
    <div class="navbar-collapse collapse" id="navbar-mobile">
        <ul class="nav navbar-nav">
            <li><a class="sidebar-control sidebar-main-toggle hidden-xs"><i class="icon-paragraph-justify3"></i></a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown dropdown-user">
                <a class="dropdown-toggle" data-toggle="dropdown">
                    @if (SessionHelper.ProfilePic != "")
                    {
                        <img src="@Url.Content("~/Image/UserProfile/" + SessionHelper.ProfilePic)" alt=""> 
                    }
                    else {
                        <img src="~/Content/images/place_holder.jpg" alt="">
                    }
                    <span> @SessionHelper.WelcomeUser </span>
                    <i class="caret"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                    @*<li><a href="#"><i class="icon-cog5"></i> Reset Password</a></li>*@
                    <li><a onclick="OpenChangePasswordWindow();"><i class="icon-cog5"></i> Change Password</a></li>
                    <li><a href="@Url.Action("LogOut", "Login")"><i class="icon-switch2"></i> Logout</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>
<!-- /main navbar -->
