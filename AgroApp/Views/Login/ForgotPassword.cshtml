@model Entities.LoginModel
@{
    Layout = null;
    ViewBag.Title = "Forgot Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Drivatic Solutions</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">

    @Styles.Render("~/Content/ui")

    @Scripts.Render("~/Scripts/JQueryScripts")

    <style>
        .field-validation-error {
            color: red !important;
        }

        .btn-info, .btn-info.focus, .btn-info:focus, .btn-info:hover {
            background-color: #262262 !important;
        }
    </style>
</head>
<body class="login-container">


    <!-- Main navbar -->
    <div class="navbar ">
        @*<div class="navbar-header">
            <a class="navbar-brand" href="@Url.Action("Index", "Login")"><img src="@Url.Content("")" alt=""></a>

            <ul class="nav navbar-nav pull-right visible-xs-block">
                <li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
            </ul>
        </div>

        <div class="navbar-collapse collapse" id="navbar-mobile">

        </div>*@
    </div>
    <!-- /main navbar -->
    <div class="page-container">
        <div class="page-content">
            <div class="content-wrapper">

                @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post, new { @autocomplete = "off", @role = "form" }))
                {
                <div class="panel panel-body login-form">
                    <div class="text-center">
                        <div class="icon-object border-slate-300 text-slate-300"><img src="@Url.Content("~/Content/img/small_logo.png")" style="height: 100px;" alt="">@*<i class="icon-reading"></i>*@</div>
                        <h5 class="content-group-lg">Forget password<small class="display-block">Enter your Email</small></h5>
                    </div>
                    <div class="form-group has-feedback has-feedback-left">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", placeholder = "Email address", @type = "email" })
                        @Html.ValidationMessageFor(m => m.Email)
                        <br />
                        <span class="md-help-block">We'll send you an email to reset your password.</span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info btn-block">Submit <i class="icon-arrow-right14 position-right"></i></button>
                    </div>
                    <br />
                    <div class="login-footer">
                        @*<a href="@Url.Action("Index","Login")">Sign IN</a>*@
                        <button type="button" class="btn btn-info btn-block" onclick="Signin()"><i class="icon-arrow-left13 position-left"></i> Back To Sign IN </button>
                    </div>


                </div>
                }
            </div>
        </div>
    </div>

    @Scripts.Render("~/Scripts/LoginJQuery")
</body>
</html>


<script>
    function Signin()
    {
        var urllink = '@Url.Action("Index", "Login")';
        window.location.href = urllink ;

    }
</script>